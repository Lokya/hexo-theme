<article class="post reveal <%= (post.title) ? "" : "no-title" %>">
  <%- partial('meta',{post:post, position:'header'}) %>
  <section class="article typo <%= (post.showAll) ? "" : "fold-all" %>">
    <div class="article-entry" itemprop="articleBody">
      <% if (post.coverImg) { %>
        <img src="<%- url_for(post.coverImg) %>" />
      <% } else { %> 
        <%- post.excerpt || post.content %>
      <% } %>
      <!-- <% if (!post.showAll) { %>
        <div class="readmore">
          <a href="<%- url_for(post.path) %>" class="flat-box">
            <i class="fas fa-book-open fa-fw" aria-hidden="true"></i>
            <%- __('post.read_more') %>
          </a>
        </div>
      <% } %> -->
    </div>
    <% if (!post.showAll) { %>
      <div class="readmore">
        <a href="<%- url_for(post.path) %>" class="flat-box">
          <i class="fas fa-book-open fa-fw" aria-hidden="true"></i>
          <%- __('post.read_more') %>
        </a>
      </div>
    <% } %>
    <% if (post.tags && post.tags.length) { %>
      <div class="full-width auto-padding tags">
        <% post.tags.each(function(item){ %>
          <a href="<%- url_for(item.path) %>" rel="nofollow"><i class="fas fa-hashtag fa-fw"></i><%=item.name %></a>
        <%})%>
      </div>
    <% } %>
  </section>
</article>
